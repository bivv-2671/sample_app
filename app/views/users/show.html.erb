<% content_for :title, t("home.index.account") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3><%= t "micropost.title" %> (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
         <%= render @microposts %>
         <%= paginate @microposts %>
      </ol>
    <% else %>
      <h3><%= t "micropost.not_post" %></h3>
    <% end %>
  </div>
</div>
