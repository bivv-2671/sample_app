<% content_for :title, t("registers.title") %>
<h1 class= "text-center"><%= t "registers.title" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render partial:"shared/errors_messages" %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: sign_up_path do |f| %>
    <div class="form-group row">
      <%= f.label :name , class:"col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name , class:"form-control", placeholder: t("registers.name"), id:"inputEmail3" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :email  , class:"col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :email , class:"form-control", placeholder: t("registers.email"), id:"inputEmail3" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :password , class:"col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.password_field :password , class:"form-control", placeholder: "*****", id:"inputEmail3" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :password_confirmation , class:"col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.password_field :password_confirmation , class:"form-control", placeholder: "*****", id:"inputEmail3" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10">
       <%= f.submit t("registers.title"), class: "btn btn-primary" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
