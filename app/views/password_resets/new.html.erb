<%= content_for :title, t("email.forgot") %>
<h1><%= t "email.forgot" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :password_reset, url: password_resets_path do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.submit t "layouts.header.save", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
