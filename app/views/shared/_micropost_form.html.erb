<%= form_for @micropost do |f| %>
  <%= render "shared/errors_messages", object: f.object %>
    <div class="field">
      <%= f.text_area :content, placeholder: t("micropost.content") %>
    </div>
    <span class="image">
    <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
    </span>
    <%= f.submit t "micropost.post", class: "btn btn-primary" %>
<% end %>
