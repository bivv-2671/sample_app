<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
  <%= link_to t("layouts.header.logo"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
      <li> <%= link_to t("layouts.header.eng"), locale: :en %> </li>
      <li> <%= link_to t("layouts.header.vie"), locale: :vi %> </li>
      <% if logged_in? %>
        <li><%= link_to t("layouts.header.user"), users_path %></li>
        <li class="dropdown">
          <%= link_to("#", class: "dropdown-toggle", data:{toggle: "dropdown"}) do %>
            <%= t "home.index.account" %> <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to t("home.index.profile"), current_user %></li>
            <li><%= link_to t("home.index.settings"), edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li><%= link_to t("home.index.logout"), logout_path, method: :delete %></li>
          </ul>
        </li>
      <% else %>
          <li><%= link_to t("layouts.header.log"), login_path %></li>
      <% end %>
      </ul>
    </nav>
  </div>
</header>
